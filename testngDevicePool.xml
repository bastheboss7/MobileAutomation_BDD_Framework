<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MobileAutomation-DevicePool-Suite" parallel="tests" thread-count="3" verbose="1">
    
    <!-- Global listeners -->
    <listeners>
        <listener class-name="org.testng.reporters.XMLReporter"/>
        <listener class-name="listeners.ExtentReportListener"/>
        <listener class-name="listeners.RetryTransformer"/>
    </listeners>

    <!-- DEVICE 1 EXECUTION -->
    <test name="Test-Device-1">
        <parameter name="deviceIndex" value="1"/>
        <classes>
            <class name="runner.TestNgRunner"/>
        </classes>
    </test>

    <!-- DEVICE 2 EXECUTION -->
    <test name="Test-Device-2">
        <parameter name="deviceIndex" value="2"/>
        <classes>
            <class name="runner.TestNgRunner"/>
        </classes>
    </test>

    <!-- DEVICE 3 EXECUTION -->
    <test name="Test-Device-3">
        <parameter name="deviceIndex" value="3"/>
        <classes>
            <class name="runner.TestNgRunner"/>
        </classes>
    </test>

</suite>
